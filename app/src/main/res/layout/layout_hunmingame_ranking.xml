<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="게임종료"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GameEndBtnView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="68dp" android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <Button
                android:text="한 판더"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OneMoreGameBtnView" app:layout_constraintStart_toEndOf="@+id/GameEndBtnView"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.516"
                android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <TextView
                android:text="순위발표"
                android:layout_width="274dp"
                android:layout_height="538dp"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                android:background="@drawable/border_game_log"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>